{% extends 'base.html.twig' %}

{% block title %}Espece index{% endblock %}

{% block body %}
<div class="div_left">
    <h1>Espece index</h1>
    <a href="{{ path('espece_new') }}">Create new</a>
</div>
<div class="div_right">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Espece</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for espece in especes %}
            <tr>
                <td>{{ espece.id }}</td>
                <td>{{ espece.espece }}</td>
                <td>
                    <a href="{{ path('espece_show', {'id': espece.id}) }}">show</a>
                    <a href="{{ path('espece_edit', {'id': espece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
